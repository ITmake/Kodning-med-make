def fav():
    attempts = 0 #räknar gissningarna
    while True:
        num = int(input("enter a guess: "))
        attempts += 1
        if num == 5:
            print("you guessed it right")
            print(f"It took you {attempts} attempts.")
            break #avbryter
        else:
            print("wrong guess, try again")

fav()

#koden kommer skriva ut hur många gissningar det tog att gissa talet#
